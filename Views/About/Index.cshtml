@model PortfolioCoreDay.Entities.About
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <h3>Hakkımda Bilgilerini Düzenle</h3>
    <hr />
    <form method="post">
        @Html.HiddenFor(x => x.AboutId)

        <div class="row">
            <div class="col-md-6">
                <label>Ünvan (Title)</label>
                <input type="text" name="Title" value="@Model?.Title" class="form-control" style="border: 1px solid #000;" required />
                <br />

                <label>Doğum Tarihi</label>
                <input type="date" name="Birthday" class="form-control" style="border: 1px solid #000;"
                       value="@(Model?.Birthday.ToString("yyyy-MM-dd") ?? DateTime.Now.ToString("yyyy-MM-dd"))" required />
                <br />

                <label>E-posta</label>
                <input type="email" name="Email" value="@Model?.Email" class="form-control" style="border: 1px solid #000;" required />
                <br />

                <label>Telefon</label>
                <input type="text" name="Phone" value="@Model?.Phone" class="form-control" style="border: 1px solid #000;" required />
            </div>

            <div class="col-md-6">
                <label>Web Sitesi</label>
                <input type="text" name="Website" value="@Model?.Website" class="form-control" style="border: 1px solid #000;" required />
                <br />

                <label>Derece / Eğitim (Degree)</label>
                <input type="text" name="Degree" value="@Model?.Degree" class="form-control" style="border: 1px solid #000;" required />
                <br />

                <label>Açıklama (Description)</label>
                <textarea name="Description" rows="5" class="form-control" style="border: 1px solid #000;" required>@Model?.Description</textarea>
            </div>
        </div>

        <br />
        <button type="submit" class="btn btn-primary" style="width:100%">Tüm Bilgileri Kaydet</button>
    </form>
</div>