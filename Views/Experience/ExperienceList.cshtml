@model List<PortfolioCoreDay.Entities.Experience>
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container mt-4">
    <h3>Deneyim Listesi</h3>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Şirket</th>
            <th>Başlık</th>
            <th>Tarih</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ExperienceId</td>
                <td>@item.CompanyName</td>
                <td>@item.Title</td>
                <td>@item.ExperienceDate</td>
                <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Experience/CreateExperience/" class="btn btn-primary">Yeni Deneyim Ekle</a>
</div>