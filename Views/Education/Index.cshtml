@model List<PortfolioCoreDay.Entities.Education>
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container mt-4">
    <h3>Eğitim Listesi</h3>
    <table class="table table-bordered" style="border: 1px solid #000;">
        <tr style="background-color: #f8f9fa;">
            <th style="border: 1px solid #000;">#</th>
            <th style="border: 1px solid #000;">Başlık</th>
            <th style="border: 1px solid #000;">Üniversite</th>
            <th style="border: 1px solid #000;">Bölüm</th>
            <th style="border: 1px solid #000;">Sil</th>
            <th style="border: 1px solid #000;">Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td style="border: 1px solid #000;">@item.EducationId</td>
                <td style="border: 1px solid #000;">@item.Title</td>
                <td style="border: 1px solid #000;">@item.Universty</td>
                <td style="border: 1px solid #000;">@item.Department</td>
                <td style="border: 1px solid #000;"><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-danger">Sil</a></td>
                <td style="border: 1px solid #000;"><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Education/CreateEducation/" class="btn btn-primary">Yeni Eğitim Ekle</a>
</div>